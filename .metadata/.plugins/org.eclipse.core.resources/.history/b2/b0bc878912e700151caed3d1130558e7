
public class Color {
	public static int[][] colorArray = null;
	public static int[] chromaticNum = null;

	int color() {
		for (int i = 1; i < colorArray.length; i++) {
			if (color(0, i)) {
				return i;
			}
		}
		return 0;
	}

	boolean color(int v, int m) {
		if (v > colorArray.length) {
			return true;
		} else {
			for (int i = 1; i < m; i++) {
				chromaticNum[v] = i;
				if (noConflict(v)) {
					color(v + 1, m);
					return true;
				}
			}
			chromaticNum[v] = 0;
			return false;
		}
	}

	boolean noConflict(int v) {
		for (int i = 0; i<colorArray.length;i++){
			if(colorArray[v][i]==1){
				if(chromaticNum[v]==chromaticNum[i]){
					return false;
				}
			}
		}
		return true;
	}
}
